<div class="container show">
  <h1 id= "title"><%= @capitalized_name %></h1>
  <h3><%= @average_rating %></h3>
  <div class='cocktail-show-image'> <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %> </div>
    <div class="text-center mt-0">
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %>: <%= dose.ingredient.name %> <%= link_to "Delete dose", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-flat"%></p>
      <% end %>
    </div>
  <div>
  <h2 class="text-center mt-4">Add an ingredient</h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: Ingredient.all, input_html: { class: 'select2' }, include_hidden: false %>
    <%= f.button :submit, class: "btn btn-flat" %>
  <% end %>
  </div>
  <div class="mt-3">
    <h2>Reviews</h2>
    <% @cocktail.reviews.each do |review| %>
      <div class="d-flex" >
      <%= review.content %>
        <ul class= "list-inline ml-3">
          <% review.rating.times do %>
          <li class="list-inline-item"><i class="fas fa-star"></i></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="text-center mb-5 mt-3">
    <%= link_to "Back to bar", cocktails_path, class: "btn btn-flat" %>
    <%= link_to "Add a review", new_cocktail_review_path(@cocktail), class: "btn btn-flat" %>
    <%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" }, class: "btn btn-flat" %>
  </div>
</div>

