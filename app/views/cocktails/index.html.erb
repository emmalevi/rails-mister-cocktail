<%= link_to "Add cocktail", new_cocktail_path, id: "button", class:"text-right width-90" %>
<div class="banner" id="photo" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1481142378093-d0289ea07b78?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
  <% end %>


</div>
  <div class="container">
    <h1 id="title">Mister<strong></h1>
    <h1 id="subtitle">Cocktails<strong></h1>

      <p><span id="banner-typed-text"></span></p>
  </div>
</div>
<div class="container">
  <div class="row no-gutters">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-sm-6 col-md-4">
        <div class="cocktail-card">
          <div class="card-img" style= "background-image:url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')"></div>
          <div class="cocktail-card-body">
            <div class="card_title_flex">
              <h5><%= cocktail.name.capitalize %></h5>
            </div>
            <%= link_to "Taste it", cocktail_path(cocktail), class: "btn btn-flat" %>
           <%= link_to "Delete it", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" }, class: "btn btn-flat" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
