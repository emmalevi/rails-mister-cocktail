  <div class="container show">
  <h2 class="text-center mt-4" id="ingredient">Add an ingredient</h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: Ingredient.all, input_html: { class: 'select2' }, include_hidden: false %>
    <%= f.button :submit, class: "btn btn-flat" %>
  <% end %>
  </div>
  <div class="container show mb-5">
  <div class="mt-3 mb-5">
    <h2 class="text-center mt-4" id="ingredient">Reviews</h2>
    <% @cocktail.reviews.each do |review| %>
      <div class="d-flex" >
      <%= review.content %>
        <ul class= "list-inline ml-3">
          <% review.rating.times do %>
          <li class="list-inline-item"><i class="fas fa-star"></i></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
    </div>
